{
  "workbench.tree.indent": 20,

  ////////////////
  // VIM CONFIG //
  ////////////////

  "vim.useSystemClipboard": true,
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.camelCaseMotion.enable": true,
  "vim.easymotionMarkerBackgroundColor": "#3177c2",
  "vim.easymotionMarkerForegroundColorTwoCharSecond": "#fff",
  "vim.easymotionMarkerForegroundColorTwoCharFirst": "#fff",
  "vim.leader": "<space>",
  "vim.surround": true,
  "vim.insertModeKeyBindings": [
    { "before": ["j","k"], "after": ["<Esc>"]},
  ],
  "vim.normalModeKeyBindings": [
    // { "before": ["<C-h>"], "after": ["^"]},
    // { "before": ["<C-l>"], "after": ["$"]},
    { "before": ["<leader>", "o"], "after": ["o", "<Esc>", "k"]},
    // { "before": ["<leader>", "o"], "after": [":<C-u>call append(line('.'), repeat([''], v:count1))<CR>"] },
    { "before": ["<leader>", "\""], "after": ["c", "s", "'", "\""] },
    { "before": ["<leader>", "'"], "after": ["c", "s", "\"", "'"] },
    { "before": ["<leader>", "h"], "after": ["^"]},
    { "before": ["<leader>", "l"], "after": ["$"]},
  ],


  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<leader>", ";"],     "commands": [ "workbench.action.showCommands" ] },
    { "before": ["<leader>", "v"],     "after": [ "v", "i", "w"] },
    { "before": ["<leader>", "}"],     "after": [ "v", "i", "w", "S", "}"] },
    { "before": ["<leader>", "{"],     "after": [ "v", "i", "w", "S", "{"] },
    { "before": ["<leader>", "]"],     "after": [ "v", "i", "w", "S", "]"] },
    { "before": ["<leader>", "["],     "after": [ "v", "i", "w", "S", "["] },
    { "before": ["<leader>", "\""],     "after": [ "v", "i", "w", "S", "\""] },
    { "before": ["<leader>", "'"],     "after": [ "v", "i", "w", "S", "'"] },
    // { "before": ["<leader>", "s"],     "commands": [":%s<C-r><C-w>/"]}
    {
      "before": ["<C-h>"],
      "after": ["<C-w>", "h"]
    },
    {
      "before": ["<leader>", "c"],
      "after": [ "B","f","_","x","~",";","x","~",";","x","~",";","x","~",";","x","~" ]
    },
    {
      "before": ["<C-j>"],
      "after": ["<C-w>", "j"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<C-w>", "k"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<C-w>", "l"]
    },
  ],

  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["<leader>", "s"], "commands": [":%s/"]},
    { "before": ["<leader>", "}"], "after": ["S", "}"] },
    { "before": ["<leader>", "{"], "after": ["S", "{"] },
    { "before": ["<leader>", "]"], "after": ["S", "]"] },
    { "before": ["<leader>", "["], "after": ["S", "["] },
    { "before": ["<leader>", "'"], "after": ["S", "'"] },
    { "before": ["<leader>", "\""], "after": ["S", "\""] },
  ],

  //   :nnoremap <Leader>s :%s/\<<C-r><C-w>\>//g<Left><Left>

  ////////////////////
  // END VIM CONFIG //
  ////////////////////

